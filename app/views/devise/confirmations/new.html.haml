%h2= t 'simple_form.resend_conf_instructions'
= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
  = f.error_notification
  = f.full_error :confirmation_token
  .form-inputs
    = f.input :email, required: true, autofocus: true, :label => (t 'simple_form.email')
  .form-actions
    = f.button :submit, (t 'simple_form.resend_conf_instructions'), :class => 'btn btn-primary'
= render 'devise/shared/links'
