%h2= t 'simple_form.resend_unlock_instructions'
= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: {method: :post, class: 'form-vertical'}) do |f|
  = f.error_notification
  = f.full_error :unlock_token
  .form-inputs
    = f.input :email, required: true, autofocus: true, :label => (t 'simple_form.email')
  .form-actions
    = f.button :submit, (t 'simple_form.resend_unlock_instructions'), :class => 'btn btn-primary'
= render 'devise/shared/links'
