.col-md-3
.col-md-6
  .panel.panel-info
    .panel-heading
      %h4= t 'change_your_pass'
  .panel-body
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, class: 'form-vertical'}) do |f|
      = f.error_notification
      = f.input :reset_password_token, as: :hidden
      = f.full_error :reset_password_token
      .form-inputs
        = f.input :password, label: (t 'simple_form.new_pass'), required: true, autofocus: true
        = f.input :password_confirmation, label: (t 'simple_form.conf_new_pass'), required: true
      .form-actions
        = f.button :submit, (t 'change_your_pass'), :class => 'btn btn-primary'
    = render 'devise/shared/links'
