.col-md-3
.col-md-6
  .panel.panel-info
    .panel-heading
      %h4= t 'session.sign_in'
  .panel-body
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-vertical'}) do |f|
      .form-inputs
        = f.input :email, required: false, autofocus: true, :label => (t 'simple_form.email')
        = f.input :password, required: false, :label => (t 'simple_form.password')
        = f.input :remember_me, :label => (t 'simple_form.remember_me'), as: :boolean if devise_mapping.rememberable?
      .form-actions
        = f.button :submit, (t 'session.sign_in'), :class => 'btn btn-primary'
    = render 'devise/shared/links'
