.col-md-3
.col-md-6
  .panel.panel-info
    .panel-heading
      %h4= t 'change_account_settings'
  .panel-body
    = simple_form_for current_user do |f|
      .form-group
        - if current_user.show_all
          = f.label t('posts.show_none')
        - else
          = f.label t('posts.show_all')
        = f.check_box :show_all
      %br
      .form-actions
        = f.submit (t 'change_settings'), class: 'btn btn-primary'